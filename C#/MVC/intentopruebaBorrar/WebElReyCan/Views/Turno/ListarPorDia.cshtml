@model IEnumerable<WebElReyCan.Models.Turno>
@{
    ViewBag.Title = "ListarPorDia";
}

<h2>Turnos agendados para el dia @ViewBag.Fecha </h2>

<table>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Fecha)</th>
        <th>@Html.DisplayNameFor(model => model.Hora)</th>
        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
        <th>@Html.DisplayNameFor(model => model.Raza)</th>
        <th>@Html.DisplayNameFor(model => model.NombreDuenio)</th>
        <th>@Html.DisplayNameFor(model => model.Celular)</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@Html.DisplayFor(modelItem => item.Fecha)</th>
            <th>@Html.DisplayFor(modelItem => item.Hora)</th>
            <th>@Html.DisplayFor(modelItem => item.Nombre)</th>
            <th>@Html.DisplayFor(modelItem => item.Raza)</th>
            <th>@Html.DisplayFor(modelItem => item.NombreDuenio)</th>
            <th>@Html.DisplayFor(modelItem => item.Celular)</th>
            <!--TODO: AGREGAR ENLACES
                <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id }) </td>
             -->
        </tr>
    }
</table>